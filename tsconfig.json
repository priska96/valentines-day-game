{
    "compilerOptions": {
        "module": "es2022",
        "target": "ESNext",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "exclude": ["node_modules", "**/node_modules/*", "dist", "**/dist/*"],
    "include": ["src/**/*", "vite-env.d.ts"]
}
